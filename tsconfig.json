{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src",
    "lib": [
        "es5", "es6", "dom", "dom.iterable"
      ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}