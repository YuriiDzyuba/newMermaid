{
  "compilerOptions": {
    "useUnknownInCatchVariables": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "strict": false,
    "skipLibCheck": true,
    "noEmit": false,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}